<p id="notice"><%= notice %></p>

<h1>Animal Types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animal_types.each do |animal_type| %>
      <tr>
        <td><%= animal_type.name %></td>
        <td><%= link_to 'Show', animal_type %></td>
        <td><%= link_to 'Edit', edit_animal_type_path(animal_type) %></td>
        <td><%= link_to 'Destroy', animal_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Animal Type', new_animal_type_path, class: 'btn btn-default' %>
